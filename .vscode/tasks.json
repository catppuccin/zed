{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dry run: whiskers",
      "type": "shell",
      "command": "whiskers zed.tera -o json --dry-run",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test: whiskers check",
      "type": "shell",
      "command": "whiskers zed.tera -o json --check themes/catppuccin.json",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build: whiskers render all",
      "type": "shell",
      "command": "whiskers zed.tera -o json && echo SUCCESS ✓",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build: whiskers (accent: mauve)",
      "type": "shell",
      "command": "whiskers zed.tera -o json --overrides '{\"accent\": \"mauve\"}' && echo SUCCESS ✓",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm themes/*.json",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
